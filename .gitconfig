[alias]
  s = status
  c = commit
  co = checkout
  b = branch
  pl = pull
  p = push
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  tool = vimdiff
  hideResolved = true
  prompt = false
  keepBackup = false
[mergetool "vimdiff"]
  trustExitCode = false
  layout = "LOCAL,MERGED,REMOTE"
